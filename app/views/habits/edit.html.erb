<div class="max-w-2xl mx-auto">
  <h1 class="text-3xl font-bold text-gray-900 mb-8">Edit Habit</h1>

  <%= form_with model: @habit, class: "bg-white shadow-md rounded-lg p-8 space-y-6" do |f| %>
    <div>
      <%= f.label :title, "Habit Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_field :title, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" %>
    </div>

    <div>
      <%= f.label :description, "Description", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_area :description, rows: 4, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" %>
    </div>

    <div class="flex space-x-4">
      <%= f.submit "Update Habit", class: "flex-1 bg-green-600 text-white py-3 px-6 rounded-lg hover:bg-green-700 font-medium cursor-pointer" %>
      <%= link_to "Cancel", @habit, class: "flex-1 bg-gray-300 text-gray-700 py-3 px-6 rounded-lg hover:bg-gray-400 text-center font-medium" %>
    </div>
  <% end %>
</div>