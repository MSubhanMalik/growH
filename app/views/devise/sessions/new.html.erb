<div class="min-h-screen bg-gradient-to-br from-green-50 to-teal-50 flex items-center justify-center py-12 px-4">
  <div class="max-w-md w-full">
    <!-- Logo -->
    <div class="text-center mb-8">
      <div class="flex items-center justify-center space-x-2 mb-4">
        <span class="text-5xl">ðŸŒ±</span>
        <span class="text-3xl font-bold text-green-600">GrowH</span>
      </div>
      <h2 class="text-2xl font-bold text-gray-900">Welcome Back!</h2>
      <p class="text-gray-600 mt-2">Sign in to continue your journey</p>
    </div>

    <!-- Sign In Form -->
    <div class="bg-white rounded-2xl shadow-xl p-8">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="space-y-5">
          <div>
            <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",
                placeholder: "your@email.com",
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" %>
          </div>

          <div>
            <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.password_field :password, autocomplete: "current-password",
                placeholder: "Enter your password",
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "rounded border-gray-300 text-green-600 focus:ring-green-500" %>
              <%= f.label :remember_me, class: "ml-2 text-sm text-gray-700" %>
            </div>
          <% end %>

          <div>
            <%= f.submit "Sign In", 
                class: "w-full bg-green-600 text-white py-3 px-4 rounded-lg hover:bg-green-700 font-semibold transition cursor-pointer" %>
          </div>
        </div>
      <% end %>

      <!-- Links -->
      <div class="mt-6 text-center space-y-2">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>